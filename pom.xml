        </dependency>
        <dependency>
            <groupId>com.squareup.okhttp3</groupId>
            <artifactId>okhttp</artifactId>
            <version>${okhttp.version}</version>
        </dependency>
        <dependency>
            <groupId>com.squareup.okhttp3</groupId>
            <artifactId>logging-interceptor</artifactId>
            <version>${logging.interceptor.version}</version>
        </dependency>
        <!--endregion-->
        <!--region Falcon-library-->
        <dependency>
            <groupId>com.vivosense.falconlib</groupId>
            <artifactId>falcon-library</artifactId>
            <version>${falconlib.version}</version>
        </dependency>
        <dependency>
            <groupId>com.vivosense.lib-falcon-message-bus</groupId>
            <artifactId>lib-falcon-message-bus</artifactId>
            <version>${falconlib.version}</version>
        </dependency>
        <dependency>
            <groupId>com.vivosense.lib-falcon-data-pipeline</groupId>
            <artifactId>lib-falcon-data-pipeline</artifactId>
